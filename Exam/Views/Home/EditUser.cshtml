@model EditUserViewModel;

<form method="post" asp-area="" asp-controller="Home" asp-action="EditUser">
    <div class="form-group">
        <label asp-for="Name">Name</label><br />
        <input type="text" asp-for="Name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label asp-for="Surname">Surname</label><br />
        <input type="text" asp-for="Surname" value="@Model.Surname" />
    </div>
    <div class="form-group">
        <label asp-for="Patronymic">Patronymic</label><br />
        <input type="text" asp-for="Patronymic" value="@Model.Patronymic" />
    </div>
    <div class="form-group">
        <label asp-for="Autobiography">Autobiography</label><br />
        <input type="text" asp-for="Autobiography" value="@Model.Autobiography" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" />
    </div>
</form>