@model User;

<form method="post" asp-area="" asp-controller="Home" asp-action="AddUser">
    <div class="form-group">
        <label asp-for="Name">Name</label><br />
        <input type="text" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Surname">Surname</label><br />
        <input type="text" asp-for="Surname" />
    </div>
    <div class="form-group">
        <label asp-for="Patronymic">Patronymic</label><br />
        <input type="text" asp-for="Patronymic" />
    </div>
    <div class="form-group">
        <label asp-for="Autobiography">Autobiography</label><br />
        <input type="text" asp-for="Autobiography" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add" />
    </div>
</form>